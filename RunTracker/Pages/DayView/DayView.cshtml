@page
@model DayViewModel
@{
}

    <div class="row mb-3 addRunRow">
        <input type="text" class="col-lg-6 col-form-label-lg" id="displayDate" readonly placeholder="@DayViewModel.displayDate"/>
    </div>

    <div class="float-container">

        <div style="width: 50%; margin-right: auto; margin-bottom: auto; margin-top: auto; padding-top: 50px" class="float-child">
            @foreach (var obj in Model.RunList)
            {
                <div class="dayView-runInfo-runName">
                    <a type="text" asp-route-rundate="@DayViewModel.displayDate" asp-route-runindex="@Model.RunList.IndexOf(obj)" asp-page="/DayView/DayView"><input type="text" class="dayViewStats-text-runName" onclick="" placeholder="@obj.RunName" /> </a>
                </div>
            }
            <div class="dayViewBtn-row">
                <a asp-page="/AddRun/AddRun" class="btn dayViewBtn" style="display:inline-block; background-color: #4CAF50;">Add Run</a>
                    @if (Model.RunList.Count != 0)
                    {
                        <form method="post">
                            <button type="submit" class="btn dayViewBtn" onclick="return confirm('Are you sure you want to delete the run?')" asp-route-rundate="@DayViewModel.displayDate" asp-route-runid="@Model.RunList[DayViewModel.index].RunID" style="display:inline-block; background-color: crimson; margin-left: 5px;">Delete Run</button>
                        </form>
                    }
            </div>
        </div>

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item dayViewTab" role="presentation">
                <button class="nav-link active" id="statsTab" data-bs-toggle="tab" data-bs-target="#stats" type="button" role="tab" aria-controls="stats" aria-selected="true">Stats</button>
            </li>
            <li class="nav-item dayViewTab" role="presentation">
                <button class="nav-link" id="photoTab" data-bs-toggle="tab" data-bs-target="#photo" type="button" role="tab" aria-controls="photo" aria-selected="false">Photo</button>
            </li>
            <li class="nav-item dayViewTab" role="presentation">
                <button class="nav-link" id="locationTab" data-bs-toggle="tab" data-bs-target="#location" type="button" role="tab" aria-controls="location" aria-selected="false">Location</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="stats" role="tabpanel" aria-labelledby="statsTab" tabindex="0">
                    <div class="box dayView-runInfo-divBox">
                        <div class="dayViewStats-row">
                            <img src="~/Images/Duration.png" class="dayViewStats-icon" />
                            @if (Model.RunList.Count != 0)
                            {                                
                               <input type="text" class="dayViewStats-text" readonly placeholder="@Model.RunList[DayViewModel.index].Duration    hh:mm:ss" />
                            }
                        </div>
                        <div class="dayViewStats-row">
                            <img src="~/Images/Distance.png" class="dayViewStats-icon" />
                            @if (Model.RunList.Count != 0)
                            {
                        <input type="text" class="dayViewStats-text" readonly placeholder="@Model.RunList[DayViewModel.index].Distance" />
                            }
                        </div>
                        <div class="dayViewStats-row">
                            <img src="~/Images/Pace.png" class="dayViewStats-icon" />
                            @if (Model.RunList.Count != 0)
                            {
                        <input type="text" class="dayViewStats-text" readonly placeholder="@Model.RunList[DayViewModel.index].Pace mins/mi" />
                            }
                        </div>
                    </div>
                </div>
            <div class="tab-pane fade" id="photo" role="tabpanel" aria-labelledby="photoTab" tabindex="0">
                    <img src="~/Images/RunPhoto.png" class="box dayView-runInfo-divBox" />
            </div>
            <div class="tab-pane fade" id="location" role="tabpanel" aria-labelledby="locationTab" tabindex="0">
                <div class="box dayView-runInfo-divBox">
                    <div class="dayViewLocation-row">
                        <label class="dayViewLocation-label">Name</label>
                        @if (Model.RunList.Count != 0)
                        {
                        <input type="text" class="dayViewStats-text" readonly placeholder="@Model.RunList[DayViewModel.index].LocationName" />
                        }
                    </div>
                    <div class="dayViewLocation-row">
                        <label class="dayViewLocation-label">City</label>
                        @if (Model.RunList.Count != 0)
                        {
                        <input type="text" class="dayViewStats-text" readonly placeholder="@Model.RunList[DayViewModel.index].City" />
                        }
                </div>
                    <div class="dayViewLocation-row">
                        <label class="dayViewLocation-label">State</label>
                        @if (Model.RunList.Count != 0)
                        {
                        <input type="text" class="dayViewStats-text" readonly placeholder="@Model.RunList[DayViewModel.index].State" />
                        }

                    </div>
                    <div class="dayViewLocation-row">
                        <label class="dayViewLocation-label">Country</label>
                        @if (Model.RunList.Count != 0)
                        {
                        <input type="text" class="dayViewStats-text" readonly placeholder="@Model.RunList[DayViewModel.index].Country" />
                        }
                    </div>
            </div>
        </div>
    </div>
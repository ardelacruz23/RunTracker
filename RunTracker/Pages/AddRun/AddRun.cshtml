@page
@model RunTracker.Pages.Shared.AddRunModel
@{
}
<body>

</body>


<script type="text/javascript">
    function validateInput(){
        var isValid = true;
        var runName = document.getElementById("runName");
        var runDate = document.getElementById("runDate");

        if (runName.value == ""){
            isValid = false;
            document.getElementById("runNameError").innerHTML = "This field is required.";
        }
        if (runDate.value == "")
        {
            isValid = false;
            document.getElementById("runDateError").innerHTML = "This field is required.";
        }
        return isValid;
    }    
</script>

<form method="POST" class="addRunForm">

        <div class="row mb-3">
            <input type="text" class="col-lg-8 col-form-label-lg" id="runName" asp-for="@Model.NewRun.RunName" placeholder="Enter name for Run">
            <span class="text-danger" asp-validation-for="NewRun.RunName" id="runNameError"></span>
        </div>

        <div class="row mb-3 addRunRow">
            <label for="runDate" class="col-lg-3 col-form-label-lg addRunLabel" asp-for="@Model.NewRun.RunDate"></label>
            <input type="date" class="form-control-lg col-lg-5 startEndTime" id="runDate" asp-for="@Model.NewRun.RunDate">
            <span class="text-danger" asp-validation-for="NewRun.RunDate" id="runDateError"></span>
        </div>

        <div class="row mb-3 addRunRow">
            <label for="startTime" class="col-lg-3 col-form-label-lg addRunLabel">Start Time </label>
            <input type="time" class="form-control-lg col-lg-5 startEndTime" value="08:00:00" step="1" id="startTime" asp-for="NewRun.StartTime">
        </div>

        <div class="row mb-3 addRunRow">
            <label for="endTime" class="col-lg-3 col-form-label-lg addRunLabel">End Time </label>
            <input type="time" class="form-control-lg col-lg-5 startEndTime" value="09:00:00" step="1" id="endTime" asp-for="NewRun.EndTime">
        </div>

        <div class="row mb-3 addRunRow">
            <label for="distance" class="col-lg-3 col-form-label-lg addRunLabel">Distance</label>
            <input type="number" class="form-control-lg distance" value="1.0" step="0.1" min="0.1" max="100" id="distance" asp-for="NewRun.Distance" />
            <input class="form-check-inline radioBtns" type="radio" name="inlineRadioOptions" id="miles" value="option1">
            <label class="form-check-inline radioLabels" for="miles">(Miles)</label>
            <input class="form-check-inline radioBtns" type="radio" name="inlineRadioOptions" id="kilometers" value="option2">
            <label class="form-check-inline radioLabels" for="kilometers">(Kilometers)</label>
        </div>

        <div class="row mb-3 addRunRow">
            <label for="runPhoto" class="col-lg-3 col-form-label-lg addRunLabel">Run Photo</label>
            <input class="form-control-md col-md-8" style="vertical-align:auto; padding-left:0" type="text" placeholder="Enter the URL for your photo"id="runPhoto" asp-for="NewRun.PhotoURL">
        </div>

        <div class="row mb-3 addRunRow">
            <button type="button" class="btn btn-secondary formBtn" onclick="window.location.href='/AddLocation/AddLocation'">Add Location</button>
            <button type="submit" class="btn btn-success formBtn" onclick="return validateInput()">Create Run</button>
        </div>

</form>

